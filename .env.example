# OpenStack Authentication Configuration
# Copy this file to .env and fill in your actual credentials

# Required OpenStack credentials
OS_AUTH_URL=https://your-openstack-auth-url:5000/v3
OS_USERNAME=your-username
OS_PASSWORD=your-password
OS_PROJECT_NAME=your-project-name
OS_USER_DOMAIN_NAME=Default
OS_PROJECT_DOMAIN_NAME=Default

# Optional settings
OS_REGION_NAME=RegionOne
OS_INTERFACE=public
OS_IDENTITY_API_VERSION=3

# Application settings
FLASK_ENV=development
FLASK_DEBUG=True

# NetBox Integration Configuration (Optional)
# If configured, enables device owner grouping and tenant information
NETBOX_URL=https://your-netbox-instance.com
NETBOX_API_KEY=your-netbox-api-key-here

# Runpod Launch Configuration (Optional)
# Required for "Launch into Runpod" functionality
# Hyperstack API for VM deployment
HYPERSTACK_API_URL=https://infrahub-api.nexgencloud.com/v1
HYPERSTACK_API_KEY=your-hyperstack-api-key-here

# Runpod API for machine registration
RUNPOD_API_KEY=your-runpod-api-key-here